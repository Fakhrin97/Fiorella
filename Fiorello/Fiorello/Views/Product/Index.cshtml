@{
    List<Product> products = Model;
}
<!-- SHOP LIST TITLE START -->
<section id="shop-list-title">
     <div class="container py-4">
         <div class="row py-5">
              <div class="col-12">
                 <h1>Shop List</h1>
               </div>
           </div>
      </div>
 </section>
<!-- SHOP LIST TITLE END -->


<!-- SHOP LIST START -->
<section id="shop-list">
    <div class="container">
        <div class="row py-5">
        @foreach (var product in products)
            {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" >
                    <div class="product-item product-item-small text-center" data-id="@product.Category.Name.ToLower()">
                        <div class="img">
                                <img src="/img/@product.ImageUrl" class="img-fluid" alt="">
                        </div>
                        <div class="overlay d-flex flex-column justify-content-center">
                            <div class="title mt-3">
                                <h6>@product.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">$@product.Price</span>
                            </div>
                            
                        </div>
                    </div>
                 </a>
            </div>                
            }           
        </div>
    </div>
</section>
<!-- SHOP LIST END -->


<!-- PRODUCTS START -->
<section id="products">
    <div class="container">
        <div class="row py-5">
            @foreach (var product in products)
            {
            <div class="col-sm-6 col-md-4 col-lg-2 mt-3">
                <div class="product-item product-item-small text-center" data-id="@product.Category.Name.ToLower()">
                    <div class="img">
                        <a href="">
                            <img src="/img/@product.ImageUrl" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="title mt-3">
                            <h6>@product.Category.Name.ToLower()</h6>
                    </div>
                    <div class="price">
                        <span class="text-black-50">$@product.Price</span>
                    </div>
                </div>
            </div>                
            }           
        </div>
    </div>
</section>
<!-- PRODUCTS END -->